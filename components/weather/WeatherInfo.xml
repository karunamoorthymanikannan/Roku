<?xml version="1.0" encoding="utf-8" ?>
<component name="WeatherInfo" extends="Group">
	<interface>
		<field id="updateData" type="node" alwaysNotify="true" onChange="updateFields" />
	</interface>
	<script type="text/brightscript" uri="pkg:/components/weather/WeatherInfo.brs" />
	<children>
		<Rectangle color="0x00000000" width="360" height="300">
			<LayoutGroup layoutDirection="vert" vertAlignment="top"
				translation="[10,10]">
				<Label id="title" horizAlign="center" color="0xFFFFFF"
					vertAlign="center" height="60">
					<Font role="font" uri="pkg:/fonts/Roboto-Medium.ttf" size="34" />
				</Label>
				<Label id="temp" horizAlign="left" width="300" color="0xFFFFFF"
					vertAlign="center" height="100" text="34">
					<Font role="font" uri="pkg:/fonts/Roboto-Medium.ttf" size="102" />
				</Label>
				<Label id="sky" horizAlign="left" width="300" color="0xFFFFFF">
					<Font role="font" uri="pkg:/fonts/Roboto-Medium.ttf" size="24" />
				</Label>
				<Label id="feels" horizAlign="left" width="300" color="0xFFFFFF">
					<Font role="font" uri="pkg:/fonts/Roboto-Medium.ttf" size="20" />
				</Label>
				<Label id="precip" horizAlign="left" width="300" color="0xFFFFFF">
					<Font role="font" uri="pkg:/fonts/Roboto-Medium.ttf" size="20" />
				</Label>
			</LayoutGroup>
			<Poster id="iconImage" width="120" height="120" translation="[220,80]"
				loadWidth="120" loadHeight="120" uri="pkg:/images/placeholder.png"
				loadDisplayMode="scaleToFill" />
		</Rectangle>
	</children>
</component>

